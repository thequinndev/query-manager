{
  "name": "@thequinndev/query-manager",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest --coverage",
    "build": "pnpm run build:cjs && pnpm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "generate:example:db-doc": "npx tsx ./examples/query-manager/document/index.ts",
    "pg:up": "docker build -t query-manager-pg . && docker run --rm --name qm-test-pg -p 5432:5432 -d query-manager-pg",
    "pg:logs": "docker logs qm-test-pg",
    "pg:down": "docker kill qm-test-pg",
    "pg:test": "npx tsx ./examples/clients/postgres.ts"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thequinndev/query-manager.git"
  },
  "author": "thequinndev",
  "license": "MIT",
  "dependencies": {
    "openapi3-ts": "^4.4.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "keywords": [],
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.11.11",
    "@vitest/coverage-v8": "^3.1.1",
    "better-sqlite3": "^11.9.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "express": "^5.1.0",
    "pg": "^8.14.1",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.5",
    "vitest": "^3.1.1"
  }
}
