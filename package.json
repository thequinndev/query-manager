{
  "name": "@thequinndev/query-manager",
  "version": "0.1.0-alpha.2",
  "description": "",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./index.d.ts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest --coverage",
    "build": "npx rimraf dist && pnpm build:esm && pnpm build:cjs",
    "build:esm": "rollup -c ./rollup.config.js",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "lint": "npx eslint",
    "lint-ts": "tsc --noEmit -p ./tsconfig.lint.json",
    "generate:example:db-doc": "tsx ./examples/query-manager/document/index.ts",
    "pg:up": "docker build -t query-manager-pg . && docker run --rm --name qm-test-pg -p 5432:5432 -d query-manager-pg",
    "pg:logs": "docker logs qm-test-pg",
    "pg:down": "docker kill qm-test-pg",
    "pg:test": "npx tsx ./examples/clients/postgres.ts",
    "sqlite:purge": "rm query-manager.db && rm query-manager.invalid.db",
    "prepare": "husky"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thequinndev/query-manager.git"
  },
  "author": "thequinndev",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "keywords": [
    "database",
    "query",
    "pg",
    "sqlite",
    "query-manager",
    "db",
    "zod"
  ],
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.16",
    "@types/pg": "^8.15.0",
    "@vitest/coverage-v8": "^3.1.3",
    "better-sqlite3": "^11.10.0",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "pg": "^8.15.6",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.2",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
